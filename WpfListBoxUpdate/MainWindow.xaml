<Window x:Class="WpfListBoxUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfListBoxUpdate"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800">
    <StackPanel>
        <ListBox Name="lbUsers" DisplayMemberPath="Name" Height="200"></ListBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Margin="10" Name="btnAddUser" Click="btnAddUser_Click">Add User</Button>
            <Button Width="100" Margin="10" Name="btnChangeUser" Click="btnChangeUser_Click">Change User</Button>
            <Button Width="100" Margin="10" Name="btnRemoveUser" Click="btnRemoveUser_Click">Remove User</Button>
        </StackPanel>
    </StackPanel>
</Window>
